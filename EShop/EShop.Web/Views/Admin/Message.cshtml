@model IEnumerable<EShop.Core.Message>

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var index = 0;
}

<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header well" data-original-title>
            <h2><i class="icon-user"></i>İsmarıclar</h2>
            <div class="box-icon">
                <a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
                <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
                <a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
            </div>
        </div>
        <div class="box-content">
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                <thead>
                    <tr>
                        <th>Göndərən</th>
                        <th>Göndərilmə tarixi</th>
                        <th>Hadisələr</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var message in Model)
                    {
                        index++;
                        <tr>
                            <td>@message.User.LoginName</td>
                            <td class="center">@message.DeliveredDate</td>
                            <td class="center">
                                <a class="btn btn-success" href="#View_@index" role="button" id="ViewModal" data-toggle="modal">
                                    <i class="icon-zoom-in icon-white"></i>
                                    Məzmunu                                            
                                </a>
                                <div class="modal hide fade" id="View_@index">
                                    @Html.Partial("_MessageContent", message)
                                </div>
                                <a class="btn btn-danger" href="#Delete_@index" role="button" id="EditModal" data-toggle="modal">
                                    <i class="icon-trash icon-white"></i>
                                    Sil
                                </a>
                                <div class="modal hide fade" id="Delete_@index">
                                    @Html.Partial("_DeleteMessage", message)
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!--/span-->

</div>
<!--/row-->
