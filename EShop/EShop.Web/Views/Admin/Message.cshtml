@model dynamic

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header well" data-original-title>
            <h2><i class="icon-user"></i>İsmarıclar</h2>
            <div class="box-icon">
                <a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
                <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
                <a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
            </div>
        </div>
        <div class="box-content">
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                <thead>
                    <tr>
                        <th>Göndərən</th>
                        <th>Göndərilmə tarixi</th>
                        <th>Məzmunu</th>
                        @*<th>Statusu</th>*@
                        <th>Hadisələr</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>David R</td>
                        <td class="center">2012/01/01</td>
                        <td class="center">@Html.ActionLink("Məzmun", "Error404", "Admin")</td>
                        @* <td class="center">
                            <span class="label label-success">Active</span>
                        </td>*@
                        <td class="center">
                            <a class="btn btn-success" href="#View" role="button" id="ViewModal" data-toggle="modal">
                                <i class="icon-zoom-in icon-white"></i>
                                Göstər                                            
                            </a>

                            <a class="btn btn-danger" href="#Delete" role="button" id="EditModal" data-toggle="modal">
                                <i class="icon-trash icon-white"></i>
                                Sil
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <!--/span-->

</div>
<!--/row-->

<div class="modal hide fade" id="View">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">×</button>
        <h3>İstifadəçinin məlumatları</h3>
    </div>
    <div class="modal-body">
        Burada Ismariclar olacaq....
    </div>
    <div class="modal-footer">
        <a href="#" class="btn" data-dismiss="modal">Bağla</a>
        <a href="#" class="btn btn-primary">Yadda saxla</a>
    </div>
</div>

<div class="modal hide fade" id="Delete">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">×</button>
        <h3>İstifadəçinin məlumatları</h3>
    </div>
    @using (Html.BeginForm("DeleteMessage", "Admin", FormMethod.Post))
    {
        //Html.HiddenFor(user=>user.UserId)
        <div class="modal-body">
            <strong>Bu ismarıcı silmək istədiyinizdən əminsiniz...?</strong>

        </div>
        <div class="modal-footer">
            <a href="#" class="btn" data-dismiss="modal">Bağla</a>
            <button class="btn btn-danger"><i class="icon-trash icon-white"></i>Sil</button>
        </div>
    }
</div>
