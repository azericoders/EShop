@model EShop.Core.Message

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">×</button>
    <h3>İstifadəçinin məlumatları</h3>
</div>
@using (Html.BeginForm("DeleteMessage", "Admin", FormMethod.Post))
{
   
    <div class="modal-body">
        Html.HiddenFor(message => message.MessageId);
        <strong>Bu ismarıcı silmək istədiyinizdən əminsiniz...?</strong>

    </div>
    <div class="modal-footer">
        <a href="#" class="btn" data-dismiss="modal">Bağla</a>
        <button class="btn btn-danger"><i class="icon-trash icon-white"></i>Sil</button>
    </div>
}