@model EShop.Web.Models.LoginUser

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Login</title>

    <!-- The styles -->
    @Styles.Render("~/LoginContent/css")

    <style type="text/css">
        body {
            padding-bottom: 40px;
        }

        .sidebar-nav {
            padding: 9px 0;
        }
    </style>
    <!-- The fav icon -->
    <link rel="shortcut icon" href="img/favicon.ico">
</head>
<body>
    <div class="container-fluid">
        <div class="row-fluid">

            <div class="row-fluid">
                <div class="span12 center login-header">
                    <h2>Admin panel</h2>
                </div>
                <!--/span-->
            </div>
            <!--/row-->

            <div class="row-fluid">
                <div class="well span5 center login-box">
                    <div class="alert alert-info">
                        Zəhmət olmazsa istifadəçi adı və şifrə ilə daxil olun.
                    </div>
                    @using (Html.BeginForm("Login", "Admin", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        <fieldset>
                            <div class="input-prepend" title="İstifadəçi adı" data-rel="tooltip">
                                <span class="add-on"><i class="icon-user"></i></span>
                                <input autofocus class="input-large span10" name="username" id="username" type="text" value="" />
                                @*@Html.TextBoxFor(model => model.UserName, new { @class = "input-large span10", autofocuse = "" })*@
                                @*@Html.ValidationMessageFor(model => model.UserName)*@
                            </div>
                            <div class="clearfix"></div>

                            <div class="input-prepend" title="şifrə" data-rel="tooltip">
                                <span class="add-on"><i class="icon-lock"></i></span>
                                <input class="input-large span10" name="password" id="password" type="password" value="" />
                                @*@Html.ValidationMessageFor(model => model.Password)*@
                            </div>
                            <div class="clearfix"></div>

                            @*                            <div class="input-prepend">
                                <label class="remember" for="remember">
                                    <input type="checkbox" id="remember" />Remember me</label>
                            </div>*@
                            <div class="clearfix"></div>

                            <p class="center span5">
                                <button type="submit" class="btn btn-primary">Daxil olun</button>
                            </p>
                        </fieldset>
                    }
                </div>
                <!--/span-->
            </div>
            <!--/row-->
        </div>
        <!--/fluid-row-->

    </div>
    <!--/.fluid-container-->
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    @Scripts.Render("~/bundles/LoginScript")
    @Scripts.Render("~/bundles/jqueryval")
</body>
</html>
